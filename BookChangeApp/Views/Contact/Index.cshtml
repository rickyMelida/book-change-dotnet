@{
    Layout = ViewBag.logg ? "_Layout" : "_LayoutUnregistered";
}
<div class="row mb-5 mx-4">
    <div id="form-title" class="mt-4">
        <h4 class="mx-2">Nos encantaria saber su opinion!</h4>
    </div>
    <div class="col-12 col-md-8 offset-md-2 col-xl-6 offset-xl-3">
        <form class="form-contacts">
            <div class="form-group my-4">
                <input type="text" class="form-control" id="nombre-apellido" aria-describedby="emailHelp"
                    placeholder="Nombre y Apellido *" />
            </div>
            <div class="form-group my-4">
                <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                    placeholder="Email *" />
            </div>
            <div class="form-group my-4">
                <input type="text" class="form-control" id="asunto" aria-describedby="emailHelp" placeholder="Asunto" />
            </div>
            <div class="form-group my-4">
                <textarea class="form-control" id="mensaje" rows="7" placeholder="Mensaje *"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">
                Enviar
            </button>
        </form>
    </div>
</div>